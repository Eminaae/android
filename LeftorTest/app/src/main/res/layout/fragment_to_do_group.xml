    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="ba.leftor.exercises.leftortest.ToDoGroupFragment">


    <include layout="@layout/manage_task_buttons" />

    <android.support.v7.widget.RecyclerView
