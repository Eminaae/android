<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/edit_task_group"
              android:layout_width="250dp"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:orientation="vertical">


    <EditText
        android:id="@+id/new_group_name"
        android:hint="Edit group name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:imeOptions="actionDone"
        android:inputType="text" />

    <Button
        android:id="@+id/group_dialog_add_group_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/new_group_name"
        android:layout_gravity="center"
        android:text="@string/task_dialog_add_group_btn">

    </Button>
    <Button
        android:id="@+id/group_dialog_quit_group_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/task_dialog_quit_group_btn">
    </Button>

</LinearLayout>